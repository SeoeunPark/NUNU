<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Option">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/changesight"
                android:layout_width="315dp"
                android:layout_height="315dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/changename"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/round_background4" />

            <ImageView
                android:id="@+id/deletedata"
                android:layout_width="315dp"
                android:layout_height="315dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/setdata"
                app:layout_constraintTop_toBottomOf="@+id/changesight"
                app:srcCompat="@drawable/round_background4" />

            <ImageView
                android:id="@+id/changename"
                android:layout_width="315dp"
                android:layout_height="315dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toStartOf="@+id/changesight"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/round_background4" />

            <ImageView
                android:id="@+id/setdata"
                android:layout_width="315dp"
                android:layout_height="315dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toStartOf="@+id/deletedata"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/changename"
                app:srcCompat="@drawable/round_background4" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="690dp"
                android:layout_height="282dp"
                android:layout_marginTop="56dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.531"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setdata"
                app:srcCompat="@drawable/round_background4" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="245dp"
                android:layout_height="126dp"
                android:layout_marginTop="72dp"
                app:layout_constraintEnd_toEndOf="@+id/changename"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toStartOf="@+id/changename"
                app:layout_constraintTop_toTopOf="@+id/changename"
                app:srcCompat="@drawable/nameicon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp"
                android:text="이름 변경"
                android:textSize="25sp"
                android:fontFamily="@font/nanumsquare_r"
                app:layout_constraintBottom_toBottomOf="@+id/changename"
                app:layout_constraintEnd_toEndOf="@+id/changename"
                app:layout_constraintStart_toStartOf="@+id/changename" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="171dp"
                android:layout_height="88dp"
                android:layout_marginTop="104dp"
                app:layout_constraintEnd_toEndOf="@+id/changesight"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="@+id/changesight"
                app:layout_constraintTop_toTopOf="@+id/changesight"
                app:srcCompat="@drawable/eyeicon" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:text="데이터 설정"
                android:textSize="25sp"
                android:fontFamily="@font/nanumsquare_r"
                app:layout_constraintBottom_toBottomOf="@+id/setdata"
                app:layout_constraintEnd_toEndOf="@+id/setdata"
                app:layout_constraintStart_toStartOf="@+id/setdata"
                app:layout_constraintTop_toBottomOf="@+id/imageView13" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="40dp"
                android:text="알림 설정"
                android:textSize="25sp"
                android:fontFamily="@font/nanumsquare_r"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="96dp"
                android:text="누누는 렌즈 사용 기한 만료와 관련된 알림을 제공합니다. \n알림 허용 상태인지 확인해주세요."
                android:textSize="25sp"
                android:fontFamily="@font/nanumsquare_r"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:text="데이터 삭제"
                android:textSize="25sp"
                android:fontFamily="@font/nanumsquare_r"
                app:layout_constraintBottom_toBottomOf="@+id/deletedata"
                app:layout_constraintEnd_toEndOf="@+id/deletedata"
                app:layout_constraintStart_toStartOf="@+id/deletedata"
                app:layout_constraintTop_toBottomOf="@+id/imageView14" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="시력 변경"
                android:textSize="25sp"
                android:fontFamily="@font/nanumsquare_r"
                app:layout_constraintBottom_toBottomOf="@+id/changesight"
                app:layout_constraintEnd_toEndOf="@+id/changesight"
                app:layout_constraintHorizontal_bias="0.525"
                app:layout_constraintStart_toStartOf="@+id/changesight"
                app:layout_constraintTop_toBottomOf="@+id/imageView12"
                app:layout_constraintVertical_bias="0.342" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="128dp"
                android:layout_height="146dp"
                android:layout_marginTop="56dp"
                app:layout_constraintEnd_toEndOf="@+id/setdata"
                app:layout_constraintHorizontal_bias="0.518"
                app:layout_constraintStart_toStartOf="@+id/setdata"
                app:layout_constraintTop_toTopOf="@+id/setdata"
                app:srcCompat="@drawable/dataset" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="109dp"
                android:layout_height="142dp"
                android:layout_marginTop="56dp"
                app:layout_constraintEnd_toEndOf="@+id/deletedata"
                app:layout_constraintStart_toStartOf="@+id/deletedata"
                app:layout_constraintTop_toTopOf="@+id/deletedata"
                app:srcCompat="@drawable/datadelete" />

            <Switch
                android:layout_width="294dp"
                android:layout_height="108dp"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_track_selector"
                app:layout_constraintEnd_toEndOf="@+id/imageView10"
                app:layout_constraintHorizontal_bias="0.742"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />
            <!--            <Switch-->
<!--                android:id="@+id/switch1"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                tools:layout_editor_absoluteX="535dp"-->
<!--                tools:layout_editor_absoluteY="807dp" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>